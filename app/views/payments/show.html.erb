<!DOCTYPE html>
<html>
<head>
  <title>Complete Payment</title>
  <script src="https://js.stripe.com/v3/"></script>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, sans-serif;
      font-size: 16px;
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
    }
    #payment-form {
      width: 100%;
    }
    #payment-element {
      margin-bottom: 24px;
    }
    #submit {
      background: #5469d4;
      color: #ffffff;
      border-radius: 4px;
      border: 0;
      padding: 12px 16px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      width: 100%;
    }
    #submit:hover {
      background: #4559c5;
    }
    #submit:disabled {
      opacity: 0.5;
      cursor: default;
    }
    .spinner {
      color: #ffffff;
      font-size: 22px;
      text-indent: -99999px;
      margin: 0px auto;
      position: relative;
      width: 20px;
      height: 20px;
      box-shadow: inset 0 0 0 2px;
      border-radius: 50%;
    }
    .spinner:after {
      content: '';
      position: absolute;
      top: -2px;
      left: -2px;
      width: inherit;
      height: inherit;
      border: inherit;
      border-radius: inherit;
      animation: spin 1s linear infinite;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    #payment-message {
      color: rgb(105, 115, 134);
      font-size: 16px;
      line-height: 20px;
      padding-top: 12px;
      text-align: center;
    }
    .order-summary {
      background: #f6f9fc;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 30px;
    }
    .order-summary h2 {
      margin-top: 0;
    }
  </style>
</head>
<body>
  <h1>Complete Your Payment</h1>

  <div class="order-summary">
    <h2>Order Summary</h2>
    <p><strong>Total:</strong> <%= number_to_currency(@order.total_amount) %></p>
    <p><strong>Items:</strong> <%= @order.order_items.count %></p>
  </div>

  <form id="payment-form">
    <div id="payment-element"></div>
    <button id="submit">
      <span id="button-text">Pay Now</span>
      <div class="spinner hidden" id="spinner"></div>
    </button>
    <div id="payment-message" class="hidden"></div>
  </form>

  <%= link_to "Cancel", payment_cancel_path, style: "display: block; text-align: center; margin-top: 20px;" %>

  <script>
    const stripe = Stripe('<%= Rails.configuration.stripe[:publishable_key] %>');

    const options = {
      clientSecret: '<%= @client_secret %>',
      appearance: { theme: 'stripe' },
    };

    const elements = stripe.elements(options);
    const paymentElement = elements.create('payment');
    paymentElement.mount('#payment-element');

    const form = document.getElementById('payment-form');
    const submitButton = document.getElementById('submit');
    const spinner = document.getElementById('spinner');
    const buttonText = document.getElementById('button-text');
    const messageContainer = document.getElementById('payment-message');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      setLoading(true);

      const {error} = await stripe.confirmPayment({
        elements,
        confirmParams: {
          return_url: '<%= payment_success_url %>',
        },
      });

      if (error) {
        showMessage(error.message);
        setLoading(false);
      }
    });

    function showMessage(messageText) {
      messageContainer.classList.remove('hidden');
      messageContainer.textContent = messageText;
      setTimeout(() => {
        messageContainer.classList.add('hidden');
        messageContainer.textContent = '';
      }, 4000);
    }

    function setLoading(isLoading) {
      if (isLoading) {
        submitButton.disabled = true;
        spinner.classList.remove('hidden');
        buttonText.classList.add('hidden');
      } else {
        submitButton.disabled = false;
        spinner.classList.add('hidden');
        buttonText.classList.remove('hidden');
      }
    }
  </script>
</body>
</html>